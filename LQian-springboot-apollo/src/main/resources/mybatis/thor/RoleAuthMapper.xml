<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fjs.apollo.mapper.thor.RoleAuthMapper">
    <select id="findByRole_id" resultType="com.fjs.apollo.entity.thor.RoleAuth">
        SELECT
            id,
            role_id,
            system_id,
            module_id,
            action_id,
            status
        FROM
            saas_mbr_role_auth
        WHERE
            role_id = #{roleId} AND
            is_deleted = 0
    </select>
</mapper>